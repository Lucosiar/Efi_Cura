<resources>
    <!-- Base application theme. -->
    <style name="Theme.MiLogin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fondoAzul</item>
        <item name="colorPrimaryVariant">@color/fondoAzul</item>
        <item name="colorOnPrimary">@color/fondoAzul</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/fondoAzul</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MiLogin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PagPrincipal" parent ="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/fondoAzul</item>
    </style>

</resources>
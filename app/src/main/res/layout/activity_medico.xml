<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAzul"
    tools:context=".FormularioCitas.MedicoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tvNombreM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:ems="10"
                android:hint="Nombre del médico"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/tvEspecialidadM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:ems="10"
                android:hint="Especialidad"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/tvHospitalM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:ems="10"
                android:hint="Nombre hospital"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/tvTelefonoM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:ems="10"
                android:hint="Número de teléfono"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/tvCorreoM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:ems="10"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button3"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:backgroundTint="@color/white"
                android:text="Hecho"
                app:iconTint="@color/white" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioMedicacion.FormularioDuracionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoAzul"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="10sp"
            android:text="¿Cuántos días quiere que dure el tratamiento?"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/tvNumberPicker"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginStart="100sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="45sp"
                android:text="días"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMuestras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="Quedan días para terminar el tratamiento"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/aceptarDias"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="400sp"
            android:backgroundTint="@color/white"
            android:text="Aceptar"
            android:textSize="16sp"
            app:cornerRadius="130dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
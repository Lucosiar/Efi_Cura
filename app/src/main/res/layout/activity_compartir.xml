<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAzul"
    tools:context=".Ajustes_AcercaDe.CompartirActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibAtras"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_marginStart="5sp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="icono de atras"
                app:srcCompat="@drawable/ic_baseline_arrow_back" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="   Acerca de"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ibDescarga"
                android:layout_width="71dp"
                android:layout_height="59dp"
                android:layout_gravity="right"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:contentDescription="icono de descarga"
                app:srcCompat="@drawable/ic_baseline_sim_card_download" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:justificationMode="inter_word"
            android:text="Esta aplicación es el resultado del proyecto final de una formación profesional de DAM y esta creada por Lucía, una alumna de Tunivers Formación. Esta es mi primera aplicación y siempre va a ser gratuita y sin publicidad para poder ayudar a todas aquellas personas que necesiten ayuda con su medicación. Si quieres saber más acerca de mi, te dejo las redes sociales y un manual de instrucciones, ubicado arriba a la derecha, en el que podrás descargar si necesitas ayuda con la aplicación."
            android:textAlignment="inherit"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="380sp"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iconLinkedin"
                android:layout_width="65dp"
                android:layout_height="90sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="icono de linkeding"
                android:onClick="clickar"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/linkedin" />

            <ImageButton
                android:id="@+id/iconGithub"
                android:layout_width="65dp"
                android:layout_height="90sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="icono de github"
                android:onClick="clickar"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/github" />

            <ImageButton
                android:id="@+id/iconInstragram"
                android:layout_width="65dp"
                android:layout_height="90sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="icono de instagram"
                android:onClick="clickar"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/instagram" />

            <ImageButton
                android:id="@+id/iconTwitter"
                android:layout_width="65dp"
                android:layout_height="90sp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="icono de twitter"
                android:onClick="clickar"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/twitter" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
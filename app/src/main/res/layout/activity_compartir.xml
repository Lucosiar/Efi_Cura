<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAzul"
    tools:context=".Ajustes_AcercaDe.CompartirActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:text="Sobre el desarrollador"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:text="¡Hola! Soy Lucía, la principal desarrolladora de esta aplicación y actualmente estoy estudiando una formación profesional de desarrollo de aplicaciones multiplataforma."
                android:textAlignment="inherit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:justificationMode="inter_word"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="5sp"
            android:text="Esta es mi primera aplicación y siempre va a ser gratuita y sin publicidad para poder ayudar a todas aquellas personas que necesiten ayuda con su medicación."
            android:textAlignment="inherit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:justificationMode="inter_word"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
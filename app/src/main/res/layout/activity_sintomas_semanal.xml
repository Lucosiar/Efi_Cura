<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioCita_Medico.SintomasSemanalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoAzul"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView58"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="15sp"
            android:text="Elija un dÃ­a de la semana"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDiaSemana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:text="TextView"
            android:textColor="@color/white" />

        <ListView
            android:id="@+id/listaDias"
            android:layout_width="match_parent"
            android:layout_height="367dp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHoraSintomaSemanal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="15sp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bHoraSemanal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="30sp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Hora"
                app:cornerRadius = "130dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/bAceptarHoraSemanal"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/white"
            android:text="Aceptar"
            app:cornerRadius = "130dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/fondoAzul"
    tools:context=".Registro_Login.InicioSesion"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoAzul">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="10sp"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/idUsuario"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10sp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="#424242" />

            <EditText
                android:id="@+id/idContrasena"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="#424242"
                tools:ignore="SpeakableTextPresentCheck" />

            <CheckBox
                android:id="@+id/cbIniSesion"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Mantener sesión iniciada" />

            <Button
                android:id="@+id/b1InicioSesion"
                android:layout_width="176dp"
                android:layout_height="59dp"
                android:layout_marginTop="10sp"
                android:backgroundTint="@color/white"
                android:onClick="iniciar"
                android:text="Iniciar Sesión"
                android:textColor="@color/black"
                app:cornerRadius="130dp" />

            <Button
                android:id="@+id/b2Registro"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:onClick="registrar"
                android:text="Registrarme"
                android:textColor="@color/black"
                app:cornerRadius="130dp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
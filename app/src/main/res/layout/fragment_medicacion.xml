<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondoAzul"
    tools:context=".Fragmentos.MedicacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:text="Medicamentos activos actualmente"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="555dp"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp" />

        <Button
            android:id="@+id/botonAnadirMedicoFragment"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="Añadir medicación"
            android:textColor="@color/fondoAzul"
            android:textSize="18sp"
            app:cornerRadius="130sp" />

    </LinearLayout>
</FrameLayout>
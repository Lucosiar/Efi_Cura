<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAzul"
    tools:context=".FragmentosPP.CitasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="Citas programadas"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxMostrarTodos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="Mostrar todas las citas"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="484dp"
            android:layout_marginStart="7sp"

            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/botonAnadirMedicoFragment"
            android:layout_width="213dp"
            android:layout_height="60sp"
            android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="AÃ±adir cita"
            android:textColor="@color/fondoAzul"
            android:textSize="20sp"
            app:cornerRadius="130dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</FrameLayout>
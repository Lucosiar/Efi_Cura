<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/fondoAzul"
    tools:context=".FormularioMedicacion.FormularioHora">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="734dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPreguntaHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:text="¿Cuándo va a comenzar el tratamiento?"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCantidadHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="10sp"
                android:text="Tomar 1 comprimido"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMostrarDiaComienzo"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="35sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="15sp"
                    android:text="Día"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/selDiaComienzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="@color/white"
                    android:text="Seleccione día"
                    app:cornerRadius="130dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:text="¿Cuánto tiempo dura el tratamiento?"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvRespu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="TextView" />

            <ListView
                android:id="@+id/listaTiempo"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp" />

            <Button
                android:id="@+id/buttonSiguiente"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:backgroundTint="@color/white"
                android:text="Aceptar"
                android:textSize="20sp"
                app:cornerRadius="130dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
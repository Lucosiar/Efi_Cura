    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Escoja el médico:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvMedico"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerMedicos"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:minHeight="48dp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/botonAnadirMedico"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_gravity="right"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:backgroundTint="@color/white"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="+"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Día:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="click"
                    android:text="Dia" />

                <TextView
                    android:id="@+id/tvDia"
                    android:layout_width="222sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Hora:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bHoraSintoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="click"
                    android:text="Hora" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="222sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <Button
                android:id="@+id/botonAnadirCita2"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:backgroundTint="@color/white"
                android:text="Añadir cita" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondoAzul"
    tools:context=".FragmentosPP.SintomasFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="15sp"
                android:text="Síntomas"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bDescargarSintomas"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Descargar historial"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSintomas"
            android:layout_width="match_parent"
            android:layout_height="554dp"
            android:layout_marginStart="7sp"
            android:layout_marginEnd="7sp">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/bAnadirSintomas"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="25sp"
            android:backgroundTint="@color/white"
            android:text="Añadir síntomas"
            android:textSize="20sp"
            app:cornerRadius="130sp" />
    </LinearLayout>

</FrameLayout>